<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Appointmentdate</th>
      <th>Starttime</th>
      <th>Comment</th>
      <th>Patient</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointmentdate %></td>
        <td><%= appointment.startTime %></td>
        <td><%= appointment.comment %></td>
        <td><%= appointment.patient_id %></td>
        <td><%= appointment.doctor_id %></td>
        <td><%= link_to 'Show', doctor_appointment_path(@doctor, appointment) %></td>
        <td><%= link_to 'Edit', edit_doctor_appointment_path(@doctor, appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

